generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int            @id @default(autoincrement())
  name          String
  price         Float
  cost          Float
  desc          String?
  img           String
  status        Boolean
  stock         Int
  visibility    String
  orderItem     OrderItem[]
  shippingItems ShippingItem[]
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  number   String    @unique
  order    Order[]
}

model Admin {
  id       Int  @id @default(autoincrement())
  username String @unique
  email    String @unique
  role     String
  password String
}

model Order {
  id            Int         @id @default(autoincrement())
  date          DateTime
  total         Float
  user          User       @relation(fields: [userId], references: [id])
  userId        Int
  orderItem     OrderItem[]
}

model Shipping {
  id          Int            @id @default(autoincrement())
  shippedAt   DateTime
  totalItems  Int
  totalWeight Float
  totalCost   Float
  items       ShippingItem[]
}

model ShippingItem {
  id          Int      @id @default(autoincrement())
  quantity    Int
  unitCost    Float
  unitWeight  Float
  shipping    Shipping @relation(fields: [shippingId], references: [id])
  shippingId  Int
  product     Product  @relation(fields: [productId], references: [id])
  productId   Int
}

model OrderItem {
  id              Int       @id @default(autoincrement())
  quantity        Int
  order           Order    @relation(fields: [orderId], references: [id])
  orderId         Int
  product         Product  @relation(fields: [productId], references: [id])
  productId       Int
}
